<?xml version="1.0"?>
<config>
    <modules>
        <ARK_MageInfusion>
            <version>0.1.0</version>
        </ARK_MageInfusion>
    </modules>
    <global>
        <models>
            <mageinfusion>
                <class>ARK_MageInfusion_Model</class>
            </mageinfusion>
        </models>
        <helpers>
            <mageinfusion>
                <class>ARK_MageInfusion_Helper</class>
            </mageinfusion>
        </helpers>
        <resources>
            <ark_mageinfusion_setup>
                <setup>
                    <module>ARK_MageInfusion</module>
                    <class>ARK_MageInfusion_Model_Resource_Setup</class>
                </setup>
            </ark_mageinfusion_setup>
        </resources>
        <events>

            <!-- Customer Before Save-->
            <customer_save_before>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addContacts</method>
                    </ARK_MageInfusion>
                </observers>
            </customer_save_before>

            <!-- Customer Delete After -->
            <customer_delete_before>
                <observers>
                    <ARK_MageInfusion>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>deleteCustomer</method>
                    </ARK_MageInfusion >
                </observers>
            </customer_delete_before>
            <!-- Category Delete After -->
            <catalog_category_delete_after>
                <observers>
                    <ARK_MageInfusion>
                        <type>singleton</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>deleteCategory</method>
                    </ARK_MageInfusion>
                </observers>
            </catalog_category_delete_after>
            <!-- Product Delete After -->
            <catalog_product_delete_after>
                <observers>
                    <ARK_MageInfusion>
                        <type>singleton</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>deleteProduct</method>
                    </ARK_MageInfusion>
                </observers>
            </catalog_product_delete_after>
            <!-- Order Save After -->
            <sales_order_place_after>
                <observers>
                    <ark_mageinfusion_model_observer>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addOrders</method>
                    </ark_mageinfusion_model_observer>
                </observers>
            </sales_order_place_after>
        </events>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <customertab>
                    <file>customertab.xml</file>
                </customertab>
            </updates>
        </layout>
        <events>
            <!-- Config Save-->
            <controller_action_predispatch_adminhtml_system_config_save>
                <observers>
                    <myobserver>
                        <type>singleton</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>saveInfConfig</method>
                    </myobserver>
                </observers>
            </controller_action_predispatch_adminhtml_system_config_save>
            <!-- Product Before Save-->
            <catalog_product_save_before>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addProducts</method>
                    </ARK_MageInfusion>
                </observers>
            </catalog_product_save_before>
            <!-- Category Before Save-->
            <catalog_category_save_before>
                <observers>
                    <category_category_observer>
                        <type>singleton</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addCategory</method>
                    </category_category_observer>
                </observers>
            </catalog_category_save_before>
        </events>

    </adminhtml>
    <frontend>
        <events>
            <!-- Customer Login -->
            <customer_login>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addContacts</method>
                    </ARK_MageInfusion>
                </observers>
            </customer_login>

            <!-- Customer Address Before Save-->
            <customer_address_save_before>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>updateAddress</method>
                    </ARK_MageInfusion>
                </observers>
            </customer_address_save_before>
            <!-- Temp Cart Adding -->
            <checkout_cart_add_product_complete>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>logCartAdd</method>
                    </ARK_MageInfusion>
                </observers>
            </checkout_cart_add_product_complete>
        </events>
    </frontend>
</config>