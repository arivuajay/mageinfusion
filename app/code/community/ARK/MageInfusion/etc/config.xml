<?xml version="1.0"?>
<config>
    <modules>
        <ARK_MageInfusion>
            <version>0.0.1</version>
        </ARK_MageInfusion>
    </modules>
    <global>
        <helpers>
            <mageinfusion>
                <class>ARK_MageInfusion_Helper</class>
            </mageinfusion>
        </helpers>
        <resources>
          <InfCatAttrb_setup>
            <setup>
              <module>ARK_MageInfusion</module>
              <class>Mage_Eav_Model_Entity_Setup</class>
            </setup>
            <connection>
              <use>core_setup</use>
            </connection>
          </InfCatAttrb_setup>
      </resources>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <customertab>
                    <file>customertab.xml</file>
                </customertab>
            </updates>
        </layout>
        <events>
            <adminhtml_customer_save_after>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addContacts</method>
                    </ARK_MageInfusion>
                </observers>
            </adminhtml_customer_save_after>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <myobserver>
                        <type>singleton</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addConfigFile</method>
                    </myobserver>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>
            <catalog_product_save_after>
                <observers>
                    <ARK_MageInfusion>
                        <type>model</type>
                        <class>ARK_MageInfusion_Model_Observer</class>
                        <method>addProducts</method>
                    </ARK_MageInfusion>
                </observers>
            </catalog_product_save_after>
        </events>
    </adminhtml>
</config>